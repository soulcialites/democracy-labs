{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
      "chain": {
        "dependsOn": ["^chain"],
          "outputs": [""],
          "inputs": ["contracts/**/*.sol"]
      },
      "compile": {
        "dependsOn": ["^compile"],
          "outputs": [""],
          "inputs": ["contracts/**/*.sol"]
      },
      "dev": {
          "outputs": [""]
      },
      "lint": {
          "outputs": [""]
      },
      "watch": {
          "dependsOn": ["^watch"]
      },
      "build": {
          "dependsOn": ["^build"]
        },
        "clean": {
            "dependsOn": ["^clean"]
      },
      "//#cleanself": {
        "dependsOn": [],
        "outputs": []
      },
      "lab": {
          "dependsOn": [
            "^watch", 
            "@democracy-labs/governor-alpha-sol#chain", 
            "@democracy-labs/demo-app#dev"
          ],
          "outputs": [""]
      }
  }
}